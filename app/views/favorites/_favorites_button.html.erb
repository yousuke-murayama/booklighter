        <% if current_user.adding_favorite?(message) %>
            <%= form_with(model: current_user.favorites.find_by(message_id: message.id), local: true, method: :delete) do |f| %>
              <%= hidden_field_tag :message_id, message.id %>
               <%= f.button :type => "submit", style: 'border-style: none;' do %>
               <p><i class="fas fa-thumbs-up unlike-btn"></i></p>
               <% end %>
            <% end %>
          <% else %>
            <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
              <%= hidden_field_tag :message_id, message.id %>
              <%= f.button :type => "submit", style: 'border-style: none;' do %>
              <p><i class="far fa-thumbs-up like-btn"></i></p>
              <% end %>
            <% end %>
        <% end %>