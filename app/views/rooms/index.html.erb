<div class='talkroom-view'>
    <h2>トークルーム一覧</h2>
</div>

<% if @rooms.any? %>
    <table class = "table table-striped">
        <thead>
            <tr>
                <th>タイトル</th>
                <th>作成者</th>
            </tr>
        </thead>
        <tbody>
            <% @rooms.each do |room| %>
                <tr>
                    <td><%= link_to room.title, room %></td>
                    <td><%= link_to room.user.name, user_path(room.user) %></td>
                </tr>
                <% end %>
        </tbody>
    </table>
    <%= paginate @rooms %>
<% end %>

<div class="border-top text-center border-info mt-5">
    <h3>トークルームを作成する</h3>
</div>
<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <%= form_with(model: @room, local: true) do |f| %>
         <%= hidden_field_tag :user_id, current_user.id %>
        <div class="form-group">
            <%= f.label :title, 'タイトル' %>
            <%= f.text_field :title, class: 'form-control' %>
            <%= f.submit '作成', class: 'btn btn-primary btn-block ' %>
            <% end %>
        </div>
    </div>
</div>