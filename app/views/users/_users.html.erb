<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
          <% if user.image? %>
            <%= image_tag user.image.thumb.url, class: "user-icon" %>
          <% else %>
            <%= image_tag "/assets/default.jpg", :size => '70x70', class: "user-icon" %>
          <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'プロフィールを見る', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>